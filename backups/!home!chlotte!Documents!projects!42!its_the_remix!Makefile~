NAME		=	minirt

SRC_MAIN_PATH	=	./srcs
SRC_MAIN_NAME	=	minirt.c	\

SRC_PARSER_PATH	=	./srcs/parser
SRC_PARSER_NAME	=	get_scene_from_file.c	\
			elem_set_fcts.c		\
			elem_set_fcts_2.c	\
			parser_tools.c

OBJ_MAIN_PATH	=	objs
OBJ_MAIN_NAME	=	$(SRC_MAIN_NAME:.c=.o)

OBJ_PARSER_PATH	=	objs/parser
OBJ_PARSER_NAME	=	$(SRC_PARSER_NAME:.c=.o)

CC		=	clang
CFLAGS		=	-Wall -Werror -Wextra -g 

CPPFLAGS	=	-I inc/Libft/ -I inc/minilibx-linux/

LDFLAGS		=	inc/Libft/libft.a inc/minilibx-linux/libmlx_Linux.a
LDLIBS		=	-lmlx -lm -lX11 -lXext

SRC_MAIN = $(addprefix $(SRC_MAIN_PATH)/,$(SRC_MAIN_NAME))
OBJ_MAIN = $(addprefix $(OBJ_MAIN_PATH)/,$(OBJ_MAIN_NAME))

SRC_PARSER = $(addprefix $(SRC_PARSER_PATH)/,$(SRC_PARSER_NAME))
OBJ_PARSER = $(addprefix $(OBJ_PARSER_PATH)/,$(OBJ_PARSER_NAME))

all: $(NAME)

$(NAME): $(OBJ_MAIN) $(OBJ_PARSER)
	@make -C inc/Libft  2> /dev/null || true
	@make -C inc/minilibx-linux  2> /dev/null || true
	@$(CC) $^ -o $@ $(LDFLAGS) $(LDLIBS)
	@echo "Compilation \033[1;32mOK\033[m"

$(OBJ_MAIN_PATH)/%.o: $(SRC_MAIN_PATH)/%.c
	@mkdir $(OBJ_MAIN_PATH) 2> /dev/null || true
	@$(CC) $(CFLAGS) -c $< $(CPPFLAGS) -o $@

$(OBJ_PARSER_PATH)/%.o: $(SRC_PARSER_PATH)/%.c
	@mkdir $(OBJ_PARSER_PATH) 2> /dev/null || true
	@$(CC) $(CFLAGS) -c $< $(CPPFLAGS) -o $@

clean:
	@make -C inc/Libft clean
	@rm -f $(OBJ_MAIN) $(OBJ_PARSER)
	@rmdir $(OBJ_PARSER_PATH) $(OBJ_MAIN_PATH) 2> /dev/null || true
	@echo "Removing objs"

fclean: clean
	@make -C inc/Libft fclean
	@rm -f $(NAME)

re: fclean all

.PHONY: all, clean, fclean, re
