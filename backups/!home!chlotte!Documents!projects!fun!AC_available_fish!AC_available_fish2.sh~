#!/bin/bash

echo "
\n
 ______     ______        ______   __     ______     __  __        __         __     ______     ______  \n/\  __ \   /\  ___\      /\  ___\ /\ \   /\  ___\   /\ \_\ \      /\ \       /\ \   /\  ___\   /\__  _\ \n\ \  __ \  \ \ \____     \ \  __\ \ \ \  \ \___  \  \ \  __ \     \ \ \____  \ \ \  \ \___  \  \/_/\ \/ \n \ \_\ \_\  \ \_____\     \ \_\    \ \_\  \/\_____\  \ \_\ \_\     \ \_____\  \ \_\  \/\_____\    \ \_\ \n  \/_/\/_/   \/_____/      \/_/     \/_/   \/_____/   \/_/\/_/      \/_____/   \/_/   \/_____/     \/_/ \n                                                                                                        \n\n
"

# check if it's the first time the program is executed
if [ -z "$TAG" ] ;
then
  read -p 'Welcome back! Have you caught any new fish since last time? (y or n)   ' new_catch
  if [ $new_catch  == 'y' ] ;
  then echo "yes";
  elif [ $new_catch == 'n' ] ;
  then echo "no";
  else echo "wtf bro";
  fi;
else
  export TAG="executed at least once!"
fi
