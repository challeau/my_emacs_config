#include "libft.h"

size_t	ft_strcat(const char *src, char *dst)
{
	size_t	i;

	dst_len = ft_strlen(dst) - size;
	src_len = ft_strlen(src);
	if (dst_len >= size)
		return (size + src_len);
	i = dst_len;
	while (i < size - 1 && *src)
	{
		dst[i] = *src;
		i++;
		src++;
	}
	dst[i] = '\0';
	return (dst_len + src_len);
}
