#include "libft.h"

char	*ft_strjoin(char *s1, char *s2){
	size_t	len1;
	size_t	len2;
	char	*new;

	len1 = ft_strlen(s1);
	len2 = ft_strlen(s2);
	new = ft_calloc(len1 + len2);
	while (len2--)
		new[len1 + len2] = s2[len2];
	while (len1--)
		new[len1] = s1[len1];
	ft_memdel(s1);
	ft_memdel(s2);
	return (new);
}
