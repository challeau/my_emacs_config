#include <unistd.h>
#include <stdlib.h>
#include <stdint.h>
#include <stdio.h>

size_t	ft_strlen(const char *str){
	size_t i = 0;

	while (str[i])
		i++;
	return (i);
}

char	*ft_calloc(size_t size){
	char *new;

	if (!(new = (char *)malloc(size * sizeof(char))))
		return (NULL);
	while (size --)
		new[size] = '\0';
	return (new);
}
