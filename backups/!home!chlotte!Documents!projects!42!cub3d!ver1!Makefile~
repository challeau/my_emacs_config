NAME	=	cub3d.a

SRCS	= 	win_fcts.c  \
		key_fcts.c  \
		draw_fcts.c \
		tools.c

OBJS	=	${SRCS:.c=.o}

HEADER	=	cub3d.h

RM	=	rm -f

FLAGS	=	-Wall -Wextra -Werror -g

.c.o:
	clang ${FLAGS} -I ${HEADER} -c $< -o ${<:.c=.o}

$(NAME) : ${OBJS}
	ar -rcs cub3d.a ${OBJS}

all:	${NAME}

clean:
		${RM} ${OBJS}

fclean:	clean
	${RM} ${NAME}

re:		fclean all

.PHONY: all clean fclean re
