	void	*mlx_ptr;
	void	*win_ptr;
	uint8_t	win_width;
	uint8_t	win_height;
}		t_mlx;

/* DRAW FUNCTIONS */
int	ft_lodev(t_mlx *m);

/* KEY FUNCTIONS */
int	ft_exit(int keycode, void *param);

/* WINDOW FUNCTIONS */
bool	ft_init_window(t_mlx *m, uint16_t width, uint16_t height, char *title);

/* TOOLS */
int ft_int(double num);

