#include "../minirt.h"

t_obj_lst	*new_obj_lst(t_object object){
	t_obj_lst	*new;

	if (!(new = (t_obj_lst *)malloc(sizeof(t_obj_lst))))
		return (NULL);
	new->obj = object;
	new->next = NULL;
	return (new);
}

void	add_obj2lst(t_obj_lst **lst, t_obj_lst *new){
	t_obj_lst	*begin;

	if (lst && (*lst) && new)
	{
		begin = (*lst);
		while (begin->next != NULL)
			begin = begin->next;
		begin->next = new;
	}
	else
		(*lst) = new;
}
