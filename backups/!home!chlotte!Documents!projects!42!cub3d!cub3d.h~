#ifndef CUB3D_H
#define CUB3D_H
#include <mlx.h>
#include <stdbool.h>
#include <stdio.h>
#include <stdint.h>

#define map_width 24
#define map_height 24
#define screen_width 640
#define screen_height 480
#define RED 0xFF0000
#define WHITE 0xFFFFFF
#define BLUE 0x0000FF
#define GREEN 0x00FF00
#define YELLOW 0xFFFF00
#define GRAY 0x808080


struct	s_mlx_obj{
	void	*mlx_ptr;
	void	*win_ptr;		
}	t_mlx_obj;

typedef struct 	s_point{
	double x;
	double y;
}		t_point;

typedef struct	s_line{
	struct s_point p1;
	int	dx;
	int	dy;
	int	m;
}		t_line;

// DRAW FUNCTIONS
void	ft_draw_straight_line(struct s_mlx_obj mlx, struct s_line line, int rgb);
void	ft_bresenham(struct s_mlx_obj mlx, struct s_line line, int rgb);

// OBJ INIT
void	ft_init_line(struct s_line *line, struct s_point p1, struct s_point p2);
void	ft_init_point(struct s_point *point, double x, double y);

// TOOLS
double	ft_abs(double num);

#endif
