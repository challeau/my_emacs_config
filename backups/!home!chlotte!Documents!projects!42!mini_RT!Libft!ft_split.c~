#include "libft.h"
#include <stdio.h>

static uint8_t	subdiv_count(const char *str, char sep){
	uint8_t i;

	i = 0;
	while (*str){
		while (*str && *str == sep)
			str++;
		i++;
		while (*str && *str != sep)
			str++;
	}
	return (i);
}

char	**ft_split(const char *str, char sep){
	size_t	i;
	size_t	next_sep;
	uint8_t	word_num;
	char	**new;

	i = 0;
	word_num = subdiv_count(str, sep);
	if (!(new = (char **)malloc((word_num + 1) * sizeof(char *))))
		return (NULL);
	while (*str){
		while (*str && *str == sep)
			str++;
		next_sep = ft_strchr(str, sep);
		new[i] = ft_calloc(next_sep);
		ft_strlcpy(new[i++], str, next_sep + 1);
		if (i < word_num)
			str += next_sep;
	}
	new[i] = NULL;
	return (new);
}
