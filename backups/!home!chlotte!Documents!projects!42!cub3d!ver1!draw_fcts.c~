void	ft_draw_verline(t_mlx *m, int x, int y1, int y2, int color)
{
	if (y1 > y2){
		y1 += y2;
		y2 = y1 - y2;
		y1 -= y2;
	}
	while (y1 <= y2){
		mlx_pixel_put(m->mlx_ptr, m->win_ptr, x, y1, color);
		y1++;
	}
}

