#include "get_next_line.h"

size_t	ft_strlen(const char *str){
	size_t i = 0;
	while (str[i])
		i++;
	return (i);
}

int	ft_strcmp(const char *str, char c){
	size_t i = 0;
	while (str[i]){
		if (str[i] == c)
			return (i);
		i++;
	}
	return (-1);
}

char	*ft_calloc(size_t size){
	char *new;

	if (!(new = (char *)malloc(size * sizeof(char))))
		return (NULL);
	while (size--)
		new[size] = '\0';
	return (new);
}

void	ft_memdel(void *ptr){
	if (ptr){
		free(ptr);
		ptr = NULL;
	}
}

int	get_next_line(char **line){
	int	ret;
	char	*buff = ft_calloc(2);

	*line = ft_calloc(2);
	while (*buff != '\n' && (ret = read(1, buff, 0)) > 0)
		*line = ft_add_char(*line, *buff);
}
