#include "..	/inc/minirt.h"

int	ft_fabs(int num){
	return(num < 0 ? -num : num);
}

int	ft_ffloor(float value){
	return ((int)value);
}

float	ft_fmod(float x, float y){
	float res;

	res = x - y * ft_ffloor(x / y);
	return (res);
}

float	ft_fclamp(float num, float low_bound, float high_bound){
	if (num < low_bound)
		return (low_bound);
	else if (num > high_bound)
		return (high_bound);
	else
		return (num);
}
