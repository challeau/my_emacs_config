SRCS	=	buff_fcts.c num_conv_fcts.c char_conv_fcts.c ft_bzero.c \
		ft_dec_to_base.c ft_itoa.c ft_putstr_fd.c ft_strcat.c \
		ft_strlen.c ft_strlowcase.c ft_strrev.c ft_utoa.c random.c \
		ft_strcmp.c ft_char_to_str.c ft_strlcpy.c ft_memdel.c \
		ft_realloc.c ft_strjoin.c ft_intlen.c ft_strdup.c ft_strlcat.c

OBJS	=	${SRCS:.c=.o}

HEAD	=	ft_printf

NAME	=	ft_printf.a

RM		=	rm -f

FLAGS	=	-Wall -Wextra -Werror -g

.c.o:
	gcc ${FLAGS} -I ${HEAD} -c $< -o ${<:.c=.o}

$(NAME) : ${OBJS}
	ar -rcs tools.a ${OBJS}

all:	${NAME}

clean:
		${RM} ${OBJS}

fclean:	clean
	${RM} ${NAME}

re:		fclean all

.PHONY:all clean fclean re bonus%

