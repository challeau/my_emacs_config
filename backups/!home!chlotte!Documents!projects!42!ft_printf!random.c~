#include "tools.h"


char	*ft_add_spaces(char *src, int len, t_flags flags)
{
    int		i;
    char	to_add[flags.width - len];
    static char *new;

    i = 0;
    while (i <= flags.width - len)
    {
	to_add[i] = ' ';
	i++;
    }
    to_add[i] = '\0';
    if (flags.align == 0)
	new = ft_strcat(to_add, src);
    if (flags.align == 1)
	new = ft_strcat(src, to_add);
    return (&new[0]);
}

char *ft_add_zeros(char *src, int width)
{
    int		i;
    char	to_add[width];
    static char *new;

    i = 0;
    while (i <= width)
    {
	to_add[i] = ' ';
	i++;
    }
    to_add[i] = '\0';
    new = ft_strcat(to_add, src);
    return (&new[0]);
}
