#include "libft.h"

char	*ft_sep_rest(char *line, char *rest){
	size_t	i;
	size_t	nl;
	char *new;

	i = 0;
	nl = ft_strchr(line, '\n');
	new = ft_strdup(line + nl + 1);
	line[nl] = '\0';
	ft_memdel(rest);
	return (new);
}

int	get_next_line(int fd, char **line)
{
	int		ret;
	char		*buff;
	static char	*rest;

	if (!line || fd < 0)
		return (-1);
	if (!rest)
		rest = ft_calloc(4096);
	*line = ft_strdup(rest);
	buff = ft_calloc(4096);
	while (ft_strchr(*line, '\n') < 0 && (ret = read(fd, buff, 4096)) > 0)
	{
		*line = ft_strjoin(*line, buff);
		if (ft_strchr(*line, '\n') >= 0)
			break ;
		buff = ft_calloc(4096);
	}
	if (ret < 0)
		return (-1);
	if (ft_strchr(*line, '\n') >= 0)
	{
		rest = ft_sep_rest(*line, rest);
		return (1);
	}
	ft_memdel(ft_sep_rest(*line, rest));
	return (0);
}

